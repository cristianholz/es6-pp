block content
    .transition-bg
    section.header
        .container-box
            #nav-icon3
                span
                span
                span
                span

            nav.menu
                a(href="/" alt="Sapatos") Sapatos
                a(href="/" alt="Novidades") Novidades
                a(href="/" alt="Quem Somos") Quem Somos
                a(href="/" alt="Bazar") Bazar
                a.link-mobile(href="/" alt="Minha conta") Minha conta

            h1
                a(href="/" alt="OWME")
