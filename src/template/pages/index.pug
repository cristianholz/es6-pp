                a(href="/" alt="Minha conta") Minha conta
                a(href="/" alt="Sacola") Sacola

    section.main
        .container-box

            h2 Sapatos

            .box-filtro
                .select
                    select(name="")
                        option(value="Maior valor") Maior valor
                        option(value="Menor valor") Menor valor
                        option(value="Nome A-Z") Nome A-Z
                        option(value="Nome Z-A") Nome Z-A

        #result(class="grid-produtos")
       
        .paginacao
            ul

                li#behind(class="arrows prev")
                    a(href="/" alt="")
                        i(class="icon icon-left-open")

                li.active
                    a(href="/" alt="") 1

                li
                    a(href="/" alt="") 2

                li(class="arrows next")

                    a(href="/" alt="")
